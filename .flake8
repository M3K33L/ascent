[flake8]
#first row of ignore is to make black happy
ignore = E203, W503,
    #C901 is functions too complex, eventually we should refactor functions to be less complex (more granular)
    # note this should also be enabled in gitlab CI eventually
    C901,
    #SIM105 has a problem with except Exception
    SIM105
per-file-ignores =
    # imported but unused and star imports
    __init__.py: F401, F403
docstring-style: SPHINX
max-line-length = 120
max-complexity = 18
#note T4 is for mypy, so does nothing now
select = B,C,E,F,W,T4,SIM,RST,D,T1,FS
