#!/usr/bin/env python
import sys
import os
import importlib

available_scripts = os.listdir('scripts')
args = sys.argv

if len(args) > 1 and all([args[0] == 'run', args[1] + '.py' in available_scripts]):
    importlib.import_module('scripts.' + args[1]).run(args[1:])
else:
    print('Usage: python run [script] [args]')